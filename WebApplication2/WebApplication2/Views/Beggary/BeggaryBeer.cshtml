@using WebApplication2.Models
@model WebApplication2.Models.MessageModels.BeggaryMessageModel

<h2 style="color: gold">You Meet @Model.Name</h2>

<h2 style="color: gold">You have @Model.Beer beer</h2>

<h2 style="color: gold">He ask you for 1 beer</h2>


<input name="aggre"
       type="button"
       style="background-color: gold"
       value="Play"
       onclick="location.href = '@Url.Action("GiveBeer", "Beggary", @Model)'" />



<input name="gameOver"
       type="button"
       style="background-color: gold"
       value="Skip"
       onclick="location.href = '@Url.Action("GameOver", "Player")'" />

<img src="../../Content/Images/Beggards.jpg" style="width: 300px; height: 450px;
                                                        margin-left: 60%; margin-right: 20%; margin-top: -10%">